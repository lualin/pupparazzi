<div class='container'>
  {{#each puppies}}
    <div class='puppy-list'>
      <a href='/puppies/{{id}}'><img
          class='img-circle'
          src='{{image}}'
          alt='{{name}}'
        /></a>
      <p>Name: {{name}}</p>
      <p>Owned by: {{owner}}</p>
      <p>Breed: {{breed}}</p>
    </div>
  {{/each}}
  <div class='puppy-list'>
    <img class='img-circle' src='/images/anonymous.png' alt='' />
    <form class='form' action='/add' method='post'>
      <label for='name' class='form-item'>
        Name:
        <input type='text' name='name' value='{{name}}' class='text-field' />
      </label>

      <label for='breed' class='form-item'>
        Breed:
        <input type='text' name='breed' value='{{breed}}' class='text-field' />
      </label>

      <label for='owner' class='form-item'>
        Owner:
        <input type='text' name='owner' value='{{owner}}' class='text-field' />
      </label>
      <input type='submit' value='add' class='add-pet' />
    </form>
  </div>
</div>